{
  "compilerOptions": {
    "outDir": "./",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "./*.ts",
    "./*.tsx",
    "./components/**/*.ts",
    "./components/**/*.tsx",
    "./services/**/*.ts",
    "./services/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts"
  ]
}